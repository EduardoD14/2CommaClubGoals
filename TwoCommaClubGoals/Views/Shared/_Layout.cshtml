<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 2 Comma Club Goals .com</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header align-content-center">
                <a class="navbar-brand" href="/"><img src="~/Images/Comma dark.png" height="50" width="50"></a>
                @Html.ActionLink("2 Comma Club Goals", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="navbar-collapse collapse align-content-center" aria-expanded="false"style="height:1px;">
                <ul class="nav navbar-collapse">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="active">@Html.ActionLink("Courses", "Courses", "Home")</li>
                    <li class="active">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="active">@Html.ActionLink("Blog", "Blog", "Home")</li>
                    <li class="active">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="active">@Html.ActionLink("Register", "Register", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Log In", "Log In", "Home")</li>
                </ul>
            </div>          
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - 2 Comma Club Goals</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
